<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vitaliy.project0.MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="1"
    android:id="@+id/buttons_layout"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/my_nanodegree_apps"
        android:paddingBottom="24dp"
        android:linksClickable="false"
        android:textSize="24dp" />

    <Button
        style="@style/ApplicationButton"
        android:text="Popular Movies" />

    <Button
        style="@style/ApplicationButton"
        android:text="Stock Hawk" />

    <Button
        style="@style/ApplicationButton"
        android:text="Build it Bigger" />

    <Button
        style="@style/ApplicationButton"
        android:text="Make Your App Material" />

    <Button
        style="@style/ApplicationButton"
        android:text="Go Ubiquitous" />

    <Button
        style="@style/ApplicationButton"
        android:text="Capstone" />

</LinearLayout>
